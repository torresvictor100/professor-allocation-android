<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.lista_alocacao.ListaAlocacaoActivity">

    <Button
        android:id="@+id/button_atualizar_alocacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Atualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_adicionar_alocacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        app:layout_constraintBottom_toTopOf="@+id/button_atualizar_alocacao"
        app:layout_constraintEnd_toEndOf="@+id/button_atualizar_alocacao"
        app:layout_constraintStart_toStartOf="@+id/button_atualizar_alocacao" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_alocacao"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/button_adicionar_alocacao"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:listitem="@layout/item_lista_alocacao" />

</androidx.constraintlayout.widget.ConstraintLayout>