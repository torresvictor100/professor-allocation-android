<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListarCursosActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_de_cusos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_adicionar_curso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_lista_curso"/>

    <Button
        android:id="@+id/button_adicionar_curso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="adicionar"
        app:layout_constraintBottom_toTopOf="@+id/button_atualizar_curso"
        app:layout_constraintEnd_toEndOf="@+id/button_atualizar_curso"
        app:layout_constraintStart_toStartOf="@+id/button_atualizar_curso" />

    <Button
        android:id="@+id/button_atualizar_curso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="atualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>